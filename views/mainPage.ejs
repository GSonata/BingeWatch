<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
  </head>

  <body>
    <header class="mainHeader">
      <h1>BingeWatch</h1>
      <div class="headerRight">
        <h2><%= userActivo.mail %></h2>
        <img src="<%= userActivo.pfp %>" alt="<%= userActivo.mail %>">
      </div>
    </header>

    
    <div class="mainContainer">
    <% movieArray.forEach(item => { %>
      <figure class="peliculaMain">
          <a href="/pelicula/<%= item.id %>"><img src="<%= item.img %>" alt="<%= item.title %>"></a>
          <figcaption><%= item.title %> <span>(<%=item.year %>)</span></figcaption>
      </figure>        
     <% }) %>  
    </div>

  </body>
</html>
