<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %>
</head>

<body class="mainBody">
<div class="menuDesplegable">
  <ul>
    <li> Bienvenido, <%= userActivo.mail %> </li>
    <li> Añadir Pelicula </li>

  </ul>
  <a href="/terminateSession">
    <ul class="closeSession">
      <li><img src="images/Iconos/cerrarSesion.png" width="8%">Cerrar Sesión</li>
    </ul>
  </a>
</div>

<div class="cortina"></div>

<header class="mainHeader">
  <h1>BingeWatch</h1>
  <div class="headerRight">
    <h2><%= userActivo.mail %></h2>
    <img src="<%= userActivo.pfp %>" id="imagenUsuario" alt="<%= userActivo.mail %>">
  </div>
</header>

<div class="mainContainer">
  <div class="menuSide">
    <p>Busca un pelicula en tu coleccion: </p>
    <input type="text" id="search-bar" placeholder="Buscar en la colección...">

    <p>Filtrar por géneros: </p>
    <div class="button-group">
      <button>Acción</button>
      <button>Drama</button>
      <button>Comedia</button>
    </div>
    <button class="reset-button" onclick="resetSearch()">Reset</button>
  </div>
  <div class="movieSide">
    <h1>Tus peliculas</h1>
    <div class="barraSeparadora"></div>

    <div class="movieContainer">
      <% movieArray.forEach(item => { %>
      <figure class="peliculaMain">
        <a href="/pelicula/<%= item.id %>" id="<%= item.id %>"><img src="<%= item.img %>" alt="<%= item.title %>"></a>
        <figcaption><%= item.title %> <span>(<%=item.year %>)</span></figcaption>
      </figure>
      <% }) %>
    </div>
  </div>
</div>
<footer>
  <%- include('partials/footer') %>
</footer>
<script src="/scripts/script.js"> </script>
</body>

</html>