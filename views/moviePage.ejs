<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("partials/head") %>
</head>

<body class="moviePageBody">
  <div class="menuDesplegable">
    <ul>
      <li> Bienvenido, <%= userActivo.mail %> </li>
      <li> Añadir Pelicula </li>

    </ul>
    <a href="/terminateSession">
      <ul class="closeSession">
        <li><img src="/images/Iconos/cerrarSesion.png" width="8%">Cerrar Sesión</li>
      </ul>
    </a>
  </div>

  <div class="cortina"></div>

  <header class="mainHeader">
    <h1>BingeWatch</h1>
    <div class="headerRight">
      <h2><%= userActivo.mail %></h2>
      <img src="<%= userActivo.pfp %>" id="imagenUsuario" alt="<%= userActivo.mail %>">
    </div>
  </header>

  <div class="movieContainer">
  <div class="posterContainer">
    <img src="<%= movieItem.img %>" alt="<%= movieItem.title %>" class="moviePoster">
    <a href=""><p><img src="/images/iconos/youtube.png" width="10%"> Trailer de la pelicula</p></a>
  </div>
  <div class="movieInfo">
  <h2><%= movieItem.title %> <span style="font-size: 1.5rem; font-style: italic; font-weight: normal;">(<%= movieItem.year %>)</span>
  <span style="font-size: 1rem; font-style: italic; font-weight: normal; color: azure;">Genero: <%= movieItem.genre %></span>

  </h2>
  </p>
  <p>
    <% movieItem.actors.forEach(actor => { %>
    <a class="actorButton"><%= actor %></a>
    <% }) %>
  </p>
  <p><%= movieItem.summary %></p>
  <table>
    <tr>
      <th>ID Copia</th>
      <th>Plataforma</th>
      <th>Estado</th>
    </tr>
    <% copiesArray.forEach(element => { %>
      <tr>
        <td><%= element.idCopy %></td>
        <td><%= element.tipo %></td>
        <td><%= element.estado %></td>
      </tr>
    <% }) %>
    <tr>
      <td colspan="3" class="newCopy">+ Añadir Nueva Copia</td>
    </tr>
  </table>
</div>
</div>

  <footer>
    <%- include("partials/footer.ejs") %>
  </footer>
  
  <script src="/scripts/script.js"> </script>
</body>

</html>
